package ereditarietà;

import java.util.Random;
import java.util.Scanner;

public class TestEreditarietà {

	public static void main(String[] args) {
								
//		Scanner input = new Scanner(System.in);
//		String nuova = input.nextLine();
		Random r = new Random();
		int scelto = 0;
		int prodotto = 0;
		
		try {
		scelto = r.nextInt(50);
		prodotto = Integer.parseInt(args[0]) * scelto;
		} catch (IllegalArgumentException exc) {
			System.out.println("ERRORE inserisci un numero");
		
		}
		EssereVivente [] arr = new EssereVivente [prodotto];
		
		
		
		
		
		for (int i=0; i<arr.length; i++) {
			int k = r.nextInt(3);
			if (k == 0) 
				arr[i] = new Pesce(); 
			else if (k==1)
				arr[i] = new Uomo();
			else if (k==2)
				arr[i] = new Cane();
		}
		
		for (EssereVivente x : arr) {
			System.out.println(x.getClass().getSimpleName());
		}
			
			
			
			
			
//		EssereVivente x = null;
//			
