package DataBase;


import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;



public class ConnectDB {

	public static void main(String[] args) throws SQLException, ClassNotFoundException {
		
		// load jdbc connector
		String driver = "com.mysql.jdbc.Driver";  		// C'è quel driver nel classPath?? Se non c'è parte l'eccezione. 
		Class.forName(driver);
		
		//stringa di connessione
		String url = "jdbc:mysql://localhost:3306/testDB";
		//connessione con username e password
		Connection con = DriverManager.getConnection(url, "testuser", "testuser");
		Statement cmd = con.createStatement(); 
		
		String query = "SELECT * FROM testDBtable";
		ResultSet res = cmd.executeQuery(query);
		
		while(res.next()) {
			System.out.println(res.getString("nome"));
			System.out.println(res.getString("cognome"));
		}
		
		String query2 = "INSERT INTO testDBtable (nome, cognome) VALUES (fabrizio , luca)";
		ResultSet res2 = cmd.executeQuery(query2);
		
		while(res2.next()) {
			System.out.println(res2.getString("nome"));
			System.out.println(res2.getString("cognome"));
		}
		
		res.close();
		cmd.close();
		con.close();
	
		
		
		
		
	}

}
