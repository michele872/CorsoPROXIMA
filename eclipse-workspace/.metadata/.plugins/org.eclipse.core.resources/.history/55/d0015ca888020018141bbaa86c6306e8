public class SerializeTest {
	
	public static String creaFile(Message mex) throws Exception {
		List <Message> messaggi = new ArrayList<>();
		for (Message message : messaggi) {
			messaggi.add(mex);
		}
		File f = new File("C:\\Users\\UTENTE8\\Desktop\\Serialize\\" + TimeStep.dataCorrente() + ".txt");
		for (Message m : messaggi) {
			if (!f.exists()) 
				f.createNewFile();
		}
		return f.getAbsolutePath();
	}
	
