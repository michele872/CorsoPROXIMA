.btn-primary {
	
    background-color:#7F0000;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    padding:8px 40px;
    text-align: center;
    font-size: 12px;
    border-radius: 3px;
    display:inline-block; 
    margin-right:5px;
    border: 2px solid #7F0000; 
    color:#fff;
/*     width:100%; */
}
.btn-primary:hover {
	
    background-color: #ffffff; 
    color: black;
}
/* Ripple magic  */
btn-primary{
	  position: relative;
	  overflow: hidden;
}
.btn-primary:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(215, 40, 40, 1);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%);
  transform-origin: 50% 50%;
}
@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 1;
  }
  20% {
    transform: scale(25, 25);
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: scale(40, 40);
  }
}
.btn-primary:focus:not(:active)::after {
  animation: ripple 1s ease-out;
}

